<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.jarvis.myapplication.Loginfragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <!-- TODO: Update blank fragment layout -->


        <EditText
            android:id="@+id/loginusertv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="109dp"
            android:ems="10"
            android:hint="Username"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/loginpasstv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/loginusertv"
            android:layout_below="@+id/loginusertv"
            android:layout_marginTop="46dp"
            android:ems="10"
            android:hint="Password"
            android:inputType="textPersonName" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/loginpasstv"
            android:layout_below="@+id/loginpasstv"
            android:layout_marginStart="28dp"
            android:layout_marginTop="93dp"
            android:text="Not registered? " />

        <TextView
            android:id="@+id/signuptv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView"
            android:layout_alignBottom="@+id/textView"
            android:layout_alignEnd="@+id/loginpasstv"
            android:layout_marginEnd="20dp"
            android:layout_toEndOf="@+id/textView"
            android:text="SignUp"
            android:textSize="17sp"
            android:textColor="#000000"
            android:textStyle="bold" />

        <Button
            android:id="@+id/loginbutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="26dp"
            android:text="Login"
            android:layout_alignBottom="@+id/textView"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>

</FrameLayout>
