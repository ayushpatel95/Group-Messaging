<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_margin="16dp"
    android:layout_height="match_parent"
    tools:context="com.example.vipin.coursemanager.RegisterFragment">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/add_photo"
            android:id="@+id/registercameraiv"/>
        <EditText
            android:layout_width="match_parent"
            android:id="@+id/firstnameed"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:layout_below="@id/registercameraiv"
            android:layout_marginTop="20dp"
            android:hint="First Name"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:id="@+id/lastnameed"
            android:layout_below="@id/firstnameed"
            android:layout_marginTop="10dp"
            android:hint="Last Name"/>
        <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:singleLine="true"
            android:id="@+id/usernameed"
        android:layout_below="@id/lastnameed"
        android:layout_marginTop="10dp"
        android:hint="Username"/>
        <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:singleLine="true"
            android:id="@+id/passworded"
        android:layout_below="@id/usernameed"
        android:layout_marginTop="10dp"
        android:hint="Password"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Register"
            android:layout_below="@id/passworded"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:id="@+id/register_btn"/>
    </RelativeLayout>
</FrameLayout>
